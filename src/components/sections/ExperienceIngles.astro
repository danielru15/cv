---
import Section from "../Section.astro";
import {obtenerFecha} from "../../helpers/fecha"
import {work} from '../../../cvIngles.json'

---

<Section title="Work Experience">
    <ul>
        {
          work.map(
            ({ name, startDate, endDate, position, summary,  url }) => {

    
              return (
                <li>
                  <article>
                    <header>
                      <div>
                        <h3>
                          <a href={url} title={`Visit ${name}`} target="_blank">
                            {name}
                          </a>
                        </h3>
                        <h4>{position}</h4>
                      </div>
    
                      <time>{obtenerFecha(startDate, endDate)}</time>
                    </header>
    
                    <footer>
                      {Array.isArray(summary) ? (
                        <ul class="summary-item">
                          {summary.map(summaryItem => (
                            <li ><p>{summaryItem.item}</p></li>
                          ))}
                        </ul>
                      ) : (
                        <p>{summary}</p>
                      )}
                    </footer>
                  </article>
                </li>
              )
            }
          )
        }
      </ul>
</Section>

<style>
    ul {
      display: flex;
      flex-direction: column;
      gap: 32px;
    }
  
    article h3 {
      font-weight: 500;
      color: #111;
    }
  
    article a {
      color: #111;
    }
  
    article a:hover {
      text-decoration: underline;
    }
  
    article h4 {
      color: #222;
      font-weight: 400;
    }
  
    header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 4px;
    }
  
    time {
      color: #555;
      font-size: 0.85rem;
      min-width: 102px;
    }

    footer p {
      text-align: justify;
    }

    footer ul {
      margin: 0;
      padding-left: 20px;
      list-style-type: disc;
    }

    footer li {
      text-align: justify;
      margin-bottom: 6px;
      line-height: 1.4;
    }
    footer .summary-item {
     gap: 10px;
    }
    footer .summary-item li {
      margin-bottom: 0;
      line-height: 1.2;
    }
  
    @media (width <= 700px) {
      time {
        text-align: right;
      }
    }
  </style>
