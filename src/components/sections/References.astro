---
import Section from "../Section.astro";
import { references } from "@cv"
---

<Section title="Referencias">
    <ul>
        {
            references.map(({name,occupation,phone}) => (
                <li>
                    <article>
                        <h3>{name}</h3>  
                        <p>Titulo profesional o cargo: {occupation}</p>
                        <p><a
                        href={`tel:${phone}`}
                        title={`Llamar por teléfono a ${name} al número ${phone}`}
                        target="_blank"
                        rel="noopener noreferrer"
                      >
                       Telefóno: {phone}
                      </a></p>
                    </article>
                    
                  
                </li>
            ))
        }
    </ul>
</Section>

<style>
    ul {
      display: flex;
      flex-direction: column;
      gap: 32px;
    }
  
    article h3 {
      font-weight: 500;
      color: #111;
    }
    article a {
        color: #727272;
      }
    
      article a:hover {
        text-decoration: underline;
      }
  
     
  </style>